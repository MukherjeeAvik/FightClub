<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorError">@color/colorError</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark">
    </style>

    <style name="Toolbar.TitleText" parent="Widget.AppCompat.Toolbar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>

    </style>
    <style name="movie_list_bg">
        <item name="cardBackgroundColor">@color/card_bg</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="paddingStart">4dp</item>
        <item name="paddingEnd">4dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="search_card_Style">
        <item name="cardBackgroundColor">@color/card_bg</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="cardElevation">4dp</item>
    </style>


    <style name="general_header">
       <item name="fontFamily">@font/roboto_semi_bold</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="movie_header">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">18sp</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
    </style>


    <style name="general_footer">
        <item name="fontFamily">@font/roboto_extra_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>






</resources>